<resources>

    <style name="Root.GiniHealthTheme.Typography.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <!-- Medium weight. See "weight" here for details: https://developer.android.com/training/wearables/wff/group/part/text/font -->
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <!-- See "weight" here for details: https://developer.android.com/training/wearables/wff/group/part/text/font -->
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Caption1" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Root.GiniHealthTheme.Typography.Caption2" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="GiniHealthTheme.Typography.Headline1" parent="Root.GiniHealthTheme.Typography.Headline1"/>
    <style name="GiniHealthTheme.Typography.Headline2" parent="Root.GiniHealthTheme.Typography.Headline2"/>
    <style name="GiniHealthTheme.Typography.Headline3" parent="Root.GiniHealthTheme.Typography.Headline3"/>
    <style name="GiniHealthTheme.Typography.Body1" parent="Root.GiniHealthTheme.Typography.Body1"/>
    <style name="GiniHealthTheme.Typography.Body2" parent="Root.GiniHealthTheme.Typography.Body2"/>
    <style name="GiniHealthTheme.Typography.Subtitle1" parent="Root.GiniHealthTheme.Typography.Subtitle1"/>
    <style name="GiniHealthTheme.Typography.Subtitle2" parent="Root.GiniHealthTheme.Typography.Subtitle2"/>
    <style name="GiniHealthTheme.Typography.Button" parent="Root.GiniHealthTheme.Typography.Button"/>
    <style name="GiniHealthTheme.Typography.Caption1" parent="Root.GiniHealthTheme.Typography.Caption1"/>
    <style name="GiniHealthTheme.Typography.Caption2" parent="Root.GiniHealthTheme.Typography.Caption2"/>

</resources>
