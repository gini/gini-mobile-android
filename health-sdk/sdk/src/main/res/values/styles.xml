<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- region Theme -->

    <!-- Override this to change the theme for the Health SDK -->
    <style name="Root.GiniHealthTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/ghs_accent_01</item>
        <item name="colorPrimaryDark">@color/ghs_light_02</item>
        <item name="colorOnPrimary">@color/ghs_light_01</item>
        <item name="backgroundColor">@color/ghs_light_01</item>
        <item name="colorOnBackground">@color/ghs_dark_01</item>
        <item name="dividerColor">@color/ghs_light_02</item>
        <item name="colorSurface">@color/ghs_light_03</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="colorSurfaceInverse">@color/ghs_dark_03</item>
        <item name="colorOnSurfaceInverse">@color/ghs_light_02</item>
        <item name="colorSurfaceVariant">@color/ghs_light_01</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="alertDialogTheme">@style/GiniHealthTheme.ThemeOverlay.Dialog.Alert</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="textAppearanceHeadline1">@style/GiniHealthTheme.Typography.Headline1</item>
        <item name="textAppearanceHeadline2">@style/GiniHealthTheme.Typography.Headline2</item>
        <item name="textAppearanceHeadline3">@style/GiniHealthTheme.Typography.Headline3</item>
        <item name="textAppearanceBody1">@style/GiniHealthTheme.Typography.Body1</item>
        <item name="textAppearanceBody2">@style/GiniHealthTheme.Typography.Body2</item>
        <item name="textAppearanceSubtitle1">@style/GiniHealthTheme.Typography.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/GiniHealthTheme.Typography.Subtitle2</item>
        <item name="textAppearanceButton">@style/GiniHealthTheme.Typography.Button</item>
        <item name="textAppearanceCaption">@style/GiniHealthTheme.Typography.Caption1</item>
        <item name="textAppearanceOverline">@style/GiniHealthTheme.Typography.Caption2</item>
        <item name="textAppearanceDisplaySmall">?attr/textAppearanceHeadline1</item>
        <item name="textAppearanceHeadlineLarge">?attr/textAppearanceHeadline2</item>
        <item name="textAppearanceHeadlineMedium">?attr/textAppearanceHeadline3</item>
        <item name="textAppearanceHeadlineSmall">?attr/textAppearanceHeadline4</item>
        <item name="textAppearanceTitleLarge">?attr/textAppearanceHeadline5</item>
        <item name="textAppearanceTitleMedium">?attr/textAppearanceSubtitle1</item>
        <item name="textAppearanceTitleSmall">?attr/textAppearanceSubtitle2</item>
        <item name="textAppearanceBodyLarge">?attr/textAppearanceBody1</item>
        <item name="textAppearanceBodyMedium">?attr/textAppearanceBody2</item>
        <item name="textAppearanceBodySmall">?attr/textAppearanceCaption</item>
        <item name="textAppearanceLabelLarge">?attr/textAppearanceButton</item>
        <item name="textAppearanceLabelMedium">?attr/textAppearanceOverline</item>
    </style>
    <style name="GiniHealthTheme" parent="Root.GiniHealthTheme"/>

    <style name="GiniHealthTheme.ThemeOverlay.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">?attr/colorPrimary</item>
    </style>

    <!-- endregion -->

    <!-- region Widgets -->

    <style name="Root.GiniHealthTheme.Widget.Button.UnelevatedButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:minHeight">@dimen/ghs_large_56</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/ghs_unelevated_button_background</item>
        <item name="android:textColor">@color/ghs_unelevated_button_text</item>
    </style>
    <style name="GiniHealthTheme.Widget.Button.UnelevatedButton" parent="Root.GiniHealthTheme.Widget.Button.UnelevatedButton"/>

    <style name="Root.GiniHealthTheme.Widget.Button.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/ghs_dark_02</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="GiniHealthTheme.Widget.Button.IconButton" parent="Root.GiniHealthTheme.Widget.Button.IconButton"/>

    <style name="Root.GiniHealthTheme.Widget.Button.OutlinedButton.Picker" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:minHeight">@dimen/ghs_large_56</item>
        <item name="strokeColor">@color/ghs_dark_05</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">@dimen/ghs_large</item>
        <item name="android:backgroundTint">@color/ghs_outlined_button_background</item>
        <item name="android:textColor">@color/ghs_outlined_button_text</item>
        <item name="android:textAppearance">@style/GiniHealthTheme.Typography.Button.Picker</item>
    </style>
    <style name="GiniHealthTheme.Widget.Button.OutlinedButton.Picker" parent="Root.GiniHealthTheme.Widget.Button.OutlinedButton.Picker"/>

    <style name="Root.GiniHealthTheme.Widget.Button.OutlinedButton.ListItem" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:minHeight">@dimen/ghs_large_56</item>
        <item name="strokeColor">@color/ghs_dark_05</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">@dimen/ghs_large</item>
        <item name="android:backgroundTint">@color/ghs_outlined_button_list_item_background</item>
        <item name="android:textColor">@color/ghs_outlined_button_text</item>
        <item name="android:textAppearance">@style/GiniHealthTheme.Typography.Button.ListItem</item>
    </style>
    <style name="GiniHealthTheme.Widget.Button.OutlinedButton.ListItem" parent="Root.GiniHealthTheme.Widget.Button.OutlinedButton.ListItem"/>

    <!-- endregion -->

    <!-- TODO: replace the styles below when refactoring the Payment Review screen to use widget styles, colors and typography -->

    <!-- Root styles shouldn't be overridden, instead override their descendant styles -->
    <style name="Root.GiniHealthTheme.PaymentInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/ghs_input_box_stroke_color</item>
        <item name="boxBackgroundColor">@color/ghs_input_box_background_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Style for TextInputLayouts in ReviewFragment -->
    <style name="GiniHealth.PaymentInputLayoutStyle" parent="Root.GiniHealthTheme.PaymentInputLayoutStyle" />

    <style name="Root.GiniHealthTheme.PaymentInputStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Style for TextInputEditTexts in ReviewFragment -->
    <style name="GiniHealth.PaymentInputStyle" parent="Root.GiniHealthTheme.PaymentInputStyle" />

    <style name="Root.GiniHealthTheme.PaymentInputStyle.Amount">
        <item name="android:gravity">end</item>
    </style>

    <!-- Style for the amount TextInputEditText in ReviewFragment -->
    <style name="GiniHealth.PaymentInputStyle.Amount" parent="Root.GiniHealthTheme.PaymentInputStyle.Amount" />

    <!-- Style for the ViewPager2 that displays the pages of the document in ReviewFragment -->
    <style name="Root.GiniHealthTheme.DocumentPagerStyle" />
    <style name="GiniHealth.DocumentPagerStyle" parent="Root.GiniHealthTheme.DocumentPagerStyle"/>

    <style name="Root.GiniHealthTheme.DocumentListStyle" />
    <style name="GiniHealth.DocumentListStyle" parent="Root.GiniHealthTheme.DocumentListStyle"/>

    <style name="Root.GiniHealthTheme.PagePhotoStyle">
        <item name="android:paddingTop">@dimen/ghs_page_padding_top</item>
    </style>

    <!-- Style for ImageView that displays the page of a document in ReviewFragment -->
    <style name="GiniHealth.PagePhotoStyle" parent="Root.GiniHealthTheme.PagePhotoStyle" />

    <style name="Root.GiniHealthTheme.PageIndicatorStyle">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style for the page indicator under the ViewPager in ReviewFragment -->
    <style name="GiniHealth.PageIndicatorStyle" parent="Root.GiniHealthTheme.PageIndicatorStyle" />

    <style name="Root.GiniHealthTheme.PageErrorText">
        <item name="android:textColor">@color/ghs_page_error</item>
    </style>

    <!-- Style for error text that is displayed when loading a page fails -->
    <style name="GiniHealth.PageErrorText" parent="Root.GiniHealthTheme.PageErrorText" />

    <!-- Style for retry button that is displayed when loading a page fails -->
    <style name="GiniHealth.PageErrorRetry" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Root.GiniHealthTheme.PaymentDetailsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ghs_payment_details_background</item>
        <item name="android:elevation">12dp</item>
        <item name="android:paddingTop">@dimen/ghs_payment_details_padding_vertical</item>
        <item name="android:paddingStart">@dimen/ghs_payment_details_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/ghs_payment_details_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- Style for the Payment Details card in ReviewFragment -->
    <style name="GiniHealth.PaymentDetailsCard" parent="Root.GiniHealthTheme.PaymentDetailsCard" />

    <style name="Root.GiniHealthTheme.BankButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ghs_bank_icon</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">@dimen/ghs_bank_icon_size</item>
        <item name="iconTint">@null</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="layout_constraintHorizontal_weight">.5</item>
    </style>

    <!-- Style for the bank button in ReviewFragment -->
    <style name="GiniHealth.BankButtonStyle" parent="Root.GiniHealthTheme.BankButtonStyle" />

    <style name="Root.GiniHealthTheme.PaymentButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/ghs_payment_button_spacing</item>
        <item name="backgroundTint">@color/ghs_payment_button_background</item>
        <item name="layout_constraintHorizontal_weight">.5</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style for Pay button in ReviewFragment -->
    <style name="GiniHealth.PaymentButtonStyle" parent="Root.GiniHealthTheme.PaymentButtonStyle" />

    <style name="Root.GiniHealthTheme.PaymentButtonProgressStyle">
        <item name="android:padding">8dp</item>
        <item name="android:translationZ" tools:targetApi="lollipop">100dp</item>
    </style>

    <!-- Style for the progress indicator that is displayed on top of the Pay button in ReviewFragment -->
    <style name="GiniHealth.PaymentButtonProgressStyle" parent="Root.GiniHealthTheme.PaymentButtonProgressStyle" />

    <style name="Root.GiniHealthTheme.CloseButtonStyle" parent="Widget.AppCompat.ImageButton">
