<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Override this to change the theme for the Health SDK -->
    <style name="Root.GiniHealth" parent="Theme.MaterialComponents.Light"/>

    <!-- Root styles shouldn't be overridden, instead override their descendant styles -->
    <style name="Root.GiniHealth.PaymentInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/ghs_input_box_stroke_color</item>
        <item name="boxBackgroundColor">@color/ghs_input_box_background_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Style for TextInputLayouts in ReviewFragment -->
    <style name="GiniHealth.PaymentInputLayoutStyle" parent="Root.GiniHealth.PaymentInputLayoutStyle" />

    <style name="Root.GiniHealth.PaymentInputStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Style for TextInputEditTexts in ReviewFragment -->
    <style name="GiniHealth.PaymentInputStyle" parent="Root.GiniHealth.PaymentInputStyle" />

    <style name="Root.GiniHealth.PaymentInputStyle.Amount">
        <item name="android:gravity">end</item>
    </style>

    <!-- Style for the amount TextInputEditText in ReviewFragment -->
    <style name="GiniHealth.PaymentInputStyle.Amount" parent="Root.GiniHealth.PaymentInputStyle.Amount" />

    <!-- Style for the ViewPager2 that displays the pages of the document in ReviewFragment -->
    <style name="Root.GiniHealth.DocumentPagerStyle" />
    <style name="GiniHealth.DocumentPagerStyle" parent="Root.GiniHealth.DocumentPagerStyle"/>

    <style name="Root.GiniHealth.DocumentListStyle" />
    <style name="GiniHealth.DocumentListStyle" parent="Root.GiniHealth.DocumentListStyle"/>

    <style name="Root.GiniHealth.PagePhotoStyle">
        <item name="android:paddingTop">@dimen/ghs_page_padding_top</item>
    </style>

    <!-- Style for ImageView that displays the page of a document in ReviewFragment -->
    <style name="GiniHealth.PagePhotoStyle" parent="Root.GiniHealth.PagePhotoStyle" />

    <style name="Root.GiniHealth.PageIndicatorStyle">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style for the page indicator under the ViewPager in ReviewFragment -->
    <style name="GiniHealth.PageIndicatorStyle" parent="Root.GiniHealth.PageIndicatorStyle" />

    <style name="Root.GiniHealth.PageErrorText">
        <item name="android:textColor">@color/ghs_page_error</item>
    </style>

    <!-- Style for error text that is displayed when loading a page fails -->
    <style name="GiniHealth.PageErrorText" parent="Root.GiniHealth.PageErrorText" />

    <!-- Style for retry button that is displayed when loading a page fails -->
    <style name="GiniHealth.PageErrorRetry" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Root.GiniHealth.PaymentDetailsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ghs_payment_details_background</item>
        <item name="android:elevation">12dp</item>
        <item name="android:paddingTop">@dimen/ghs_payment_details_padding_vertical</item>
        <item name="android:paddingStart">@dimen/ghs_payment_details_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/ghs_payment_details_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- Style for the Payment Details card in ReviewFragment -->
    <style name="GiniHealth.PaymentDetailsCard" parent="Root.GiniHealth.PaymentDetailsCard" />

    <style name="Root.GiniHealth.BankButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ghs_bank_icon</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">@dimen/ghs_bank_icon_size</item>
        <item name="iconTint">@null</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="layout_constraintHorizontal_weight">.5</item>
    </style>

    <!-- Style for the bank button in ReviewFragment -->
    <style name="GiniHealth.BankButtonStyle" parent="Root.GiniHealth.BankButtonStyle" />

    <style name="Root.GiniHealth.PaymentButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/ghs_payment_button_spacing</item>
        <item name="backgroundTint">@color/ghs_payment_button_background</item>
        <item name="layout_constraintHorizontal_weight">.5</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style for Pay button in ReviewFragment -->
    <style name="GiniHealth.PaymentButtonStyle" parent="Root.GiniHealth.PaymentButtonStyle" />

    <style name="Root.GiniHealth.PaymentButtonProgressStyle">
        <item name="android:padding">8dp</item>
        <item name="android:translationZ" tools:targetApi="lollipop">100dp</item>
    </style>

    <!-- Style for the progress indicator that is displayed on top of the Pay button in ReviewFragment -->
    <style name="GiniHealth.PaymentButtonProgressStyle" parent="Root.GiniHealth.PaymentButtonProgressStyle" />

    <style name="Root.GiniHealth.CloseButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/ghs_close_button</item>
    </style>

    <!-- Style for close button in ReviewFragment -->
    <style name="GiniHealth.CloseButtonStyle" parent="Root.GiniHealth.CloseButtonStyle"/>

    <style name="Root.GiniHealth.BankSelection.TitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/GiniHealth.BankSelection.TextAppearance.Title</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/ghs_payment_details_background</item>
    </style>
    <style name="GiniHealth.BankSelection.TitleStyle" parent="Root.GiniHealth.BankSelection.TitleStyle"/>

    <style name="Root.GiniHealth.BankSelection.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
    </style>
    <style name="GiniHealth.BankSelection.TextAppearance.Title" parent="Root.GiniHealth.BankSelection.TextAppearance.Title"/>

    <style name="Root.GiniHealth.BankSelection.ThemeOverlay.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/GiniHealth.BankSelection.BottomSheetDialog</item>
    </style>
    <style name="GiniHealth.BankSelection.ThemeOverlay.BottomSheetDialog" parent="Root.GiniHealth.BankSelection.ThemeOverlay.BottomSheetDialog"/>

    <style name="Root.GiniHealth.BankSelection.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/ghs_payment_details_background</item>
        <item name="android:elevation">12dp</item>
        <item name="shapeAppearance">@null</item>
    </style>
    <style name="GiniHealth.BankSelection.BottomSheetDialog" parent="Root.GiniHealth.BankSelection.BottomSheetDialog" />

    <style name="Root.GiniHealth.BankSelection.ItemIconStyle" parent="">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="GiniHealth.BankSelection.ItemIconStyle" parent="Root.GiniHealth.BankSelection.ItemIconStyle"/>

    <style name="Root.GiniHealth.BankSelection.ItemTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/GiniHealth.BankSelection.TextAppearance.Name</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="GiniHealth.BankSelection.ItemTextStyle" parent="Root.GiniHealth.BankSelection.ItemTextStyle"/>

    <style name="Root.GiniHealth.BankSelection.TextAppearance.Name" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
    </style>
    <style name="GiniHealth.BankSelection.TextAppearance.Name" parent="Root.GiniHealth.BankSelection.TextAppearance.Name"/>

    <style name="Root.GiniHealth.BankSelection.ItemCheckmarkStyle" parent="">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>
    <style name="GiniHealth.BankSelection.ItemCheckmarkStyle" parent="Root.GiniHealth.BankSelection.ItemCheckmarkStyle"/>

    <style name="Root.GiniHealth.BankSelection.ItemSeparatorStyle" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/ghs_list_item_separator</item>
    </style>
    <style name="GiniHealth.BankSelection.ItemSeparatorStyle" parent="Root.GiniHealth.BankSelection.ItemSeparatorStyle" />

    <style name="Root.GiniHealth.BankSelection.ListStyle" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">48sp</item>
    </style>
    <style name="GiniHealth.BankSelection.ListStyle" parent="Root.GiniHealth.BankSelection.ListStyle" />

    <style name="Root.GiniHealth.PaymentDetails.InfoBar" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ghs_payment_details_info_bar_background</item>
        <item name="android:paddingBottom">@dimen/ghs_payment_details_radius</item>
    </style>
    <style name="GiniHealth.PaymentDetails.InfoBar" parent="Root.GiniHealth.PaymentDetails.InfoBar" />

    <style name="Root.GiniHealth.PaymentDetails.InfoBar.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/GiniHealth.PaymentDetails.InfoBar.TextAppearance</item>
    </style>
    <style name="GiniHealth.PaymentDetails.InfoBar.TextView" parent="Root.GiniHealth.PaymentDetails.InfoBar.TextView" />

    <style name="Root.GiniHealth.PaymentDetails.InfoBar.TextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/ghs_payment_details_info_bar_text_color</item>
    </style>
    <style name="GiniHealth.PaymentDetails.InfoBar.TextAppearance" parent="Root.GiniHealth.PaymentDetails.InfoBar.TextAppearance" />

</resources>