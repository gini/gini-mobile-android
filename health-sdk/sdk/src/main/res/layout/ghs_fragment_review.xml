<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghs_document_background">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        style="@style/GiniHealth.DocumentPagerStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/pager_negative_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/indicator"
        style="@style/GiniHealth.PageIndicatorStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/ghs_tab_height"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/ghs_document_background"
        app:layout_constraintBottom_toTopOf="@id/payment_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabBackground="@drawable/ghs_tab_pager_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="@dimen/ghs_tab_width"
        app:tabMode="fixed" />

    <Space
        android:id="@+id/pager_negative_space"
        android:layout_width="0dp"
        android:layout_height="@dimen/ghs_payment_details_padding_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/indicator"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_details"
        style="@style/GiniHealth.PaymentDetailsCard"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/recipient_layout"
            style="@style/GiniHealth.PaymentInputLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/recipient"
                style="@style/GiniHealth.PaymentInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/ghs_recipient_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/iban_layout"
            style="@style/GiniHealth.PaymentInputLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ghs_input_spacing_vertical"
            android:layout_marginEnd="@dimen/ghs_input_spacing_horizontal"
            app:layout_constraintEnd_toStartOf="@id/amount_layout"
            app:layout_constraintHorizontal_weight="@dimen/ghs_input_iban_weight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipient_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iban"
                style="@style/GiniHealth.PaymentInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/ghs_iban_hint"
                android:nextFocusDown="@id/amount" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amount_layout"
            style="@style/GiniHealth.PaymentInputLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ghs_input_spacing_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="@dimen/ghs_input_amount_weight"
            app:layout_constraintStart_toEndOf="@id/iban_layout"
            app:layout_constraintTop_toBottomOf="@id/recipient_layout"
            app:suffixText="â‚¬">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amount"
                style="@style/GiniHealth.PaymentInputStyle.Amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="0123456789.,"
                android:hint="@string/ghs_amount_hint"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/iban_amount_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="iban_layout,amount_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/purpose_layout"
            style="@style/GiniHealth.PaymentInputLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ghs_input_spacing_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iban_amount_barrier">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/purpose"
                style="@style/GiniHealth.PaymentInputStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/ghs_purpose_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <net.gini.android.health.sdk.review.BankButton
            android:id="@+id/bank"
            style="@style/GiniHealth.BankButtonStyle"
            android:text="@string/ghs_bank_placeholder"
            app:layout_constraintEnd_toStartOf="@id/payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/purpose_layout" />

        <Button
            android:id="@+id/payment"
            style="@style/GiniHealth.PaymentButtonStyle"
            android:enabled="false"
            android:text="@string/ghs_pay_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bank"
            app:layout_constraintTop_toBottomOf="@id/purpose_layout" />

        <ProgressBar
            android:id="@+id/payment_progress"
            style="@style/GiniHealth.PaymentButtonProgressStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/payment"
            app:layout_constraintEnd_toEndOf="@id/payment"
            app:layout_constraintStart_toStartOf="@id/payment"
            app:layout_constraintTop_toTopOf="@id/payment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/close"
        style="@style/GiniHealth.CloseButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>