<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/gps_powered_by_gini_content_description"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/gps_powered_by_gini_label"
        style="@style/GiniPaymentTheme.Typography.Caption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gps_payment_powered_by_label"
        android:textColor="@color/gps_payment_component_caption"
        android:contentDescription="@string/gps_powered_by_gini_content_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/gps_gini_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gps_small"
        app:layout_constraintBottom_toBottomOf="@id/gps_powered_by_gini_label"
        app:layout_constraintStart_toEndOf="@id/gps_powered_by_gini_label"
        app:layout_constraintTop_toTopOf="@id/gps_powered_by_gini_label"
        app:srcCompat="@drawable/gps_gini_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>