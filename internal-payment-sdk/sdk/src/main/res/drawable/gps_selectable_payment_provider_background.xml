<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/gps_small"/>
            <solid android:color="?attr/colorSurface"/>
            <stroke android:color="?attr/colorPrimary" android:width="@dimen/gps_small_2"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/gps_small"/>
            <solid android:color="?attr/colorSurface"/>
            <stroke android:color="@color/gps_payment_provider_border_color" android:width="@dimen/gps_small_2"/>
        </shape>
    </item>
</selector>