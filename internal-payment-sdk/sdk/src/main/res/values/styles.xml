<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- region Theme -->

    <!-- Override this to change the theme for the Merchant SDK -->
    <style name="Root.GiniPaymentTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/gps_accent_01</item>
        <item name="colorPrimaryDark">@color/gps_light_02</item>
        <item name="colorOnPrimary">@color/gps_light_01</item>
        <item name="backgroundColor">@color/gps_light_01</item>
        <item name="colorOnBackground">@color/gps_dark_01</item>
        <item name="dividerColor">@color/gps_light_02</item>
        <item name="colorSurface">@color/gps_dark_07</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="colorSurfaceInverse">@color/gps_dark_01</item>
        <item name="colorOnSurfaceInverse">@color/gps_light_02</item>
        <item name="colorSurfaceVariant">@color/gps_light_01</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="alertDialogTheme">@style/GiniPaymentTheme.ThemeOverlay.Dialog.Alert</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="bottomSheetDialogTheme">@style/GiniPaymentTheme.ThemeOverlay.BottomSheetDialog</item>
        <item name="textAppearanceHeadline1">@style/GiniPaymentTheme.Typography.Headline1</item>
        <item name="textAppearanceHeadline2">@style/GiniPaymentTheme.Typography.Headline2</item>
        <item name="textAppearanceHeadline3">@style/GiniPaymentTheme.Typography.Headline3</item>
        <item name="textAppearanceBody1">@style/GiniPaymentTheme.Typography.Body1</item>
        <item name="textAppearanceBody2">@style/GiniPaymentTheme.Typography.Body2</item>
        <item name="textAppearanceSubtitle1">@style/GiniPaymentTheme.Typography.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/GiniPaymentTheme.Typography.Subtitle2</item>
        <item name="textAppearanceButton">@style/GiniPaymentTheme.Typography.Button</item>
        <item name="textAppearanceCaption">@style/GiniPaymentTheme.Typography.Caption1</item>
        <item name="textAppearanceOverline">@style/GiniPaymentTheme.Typography.Caption2</item>
        <item name="textAppearanceDisplaySmall">?attr/textAppearanceHeadline1</item>
        <item name="textAppearanceHeadlineLarge">?attr/textAppearanceHeadline2</item>
        <item name="textAppearanceHeadlineMedium">?attr/textAppearanceHeadline3</item>
        <item name="textAppearanceHeadlineSmall">?attr/textAppearanceHeadline4</item>
        <item name="textAppearanceTitleLarge">?attr/textAppearanceHeadline5</item>
        <item name="textAppearanceTitleMedium">?attr/textAppearanceSubtitle1</item>
        <item name="textAppearanceTitleSmall">?attr/textAppearanceSubtitle2</item>
        <item name="textAppearanceBodyLarge">?attr/textAppearanceBody1</item>
        <item name="textAppearanceBodyMedium">?attr/textAppearanceBody2</item>
        <item name="textAppearanceBodySmall">?attr/textAppearanceCaption</item>
        <item name="textAppearanceLabelLarge">?attr/textAppearanceButton</item>
        <item name="textAppearanceLabelMedium">?attr/textAppearanceOverline</item>
        <item name="snackbarStyle">@style/GiniPaymentTheme.Widget.Snackbar</item>
        <item name="snackbarButtonStyle">@style/GiniPaymentTheme.Widget.Snackbar.Button</item>
        <item name="snackbarTextViewStyle">@style/GiniPaymentTheme.Widget.Snackbar.TextView</item>
    </style>
    <style name="GiniPaymentTheme" parent="Root.GiniPaymentTheme"/>

    <style name="GiniPaymentTheme.ThemeOverlay.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">?attr/colorPrimary</item>
    </style>

    <!-- endregion -->

    <!-- region Widgets -->

    <style name="Root.GiniPaymentTheme.Widget.Button.UnelevatedButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/gps_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:minHeight">@dimen/gps_large_56</item>
        <item name="android:insetTop">@dimen/gps_zero</item>
        <item name="android:insetBottom">@dimen/gps_zero</item>
        <item name="android:backgroundTint">@color/gps_unelevated_button_background</item>
        <item name="android:textColor">@color/gps_unelevated_button_text</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Button.UnelevatedButton" parent="Root.GiniPaymentTheme.Widget.Button.UnelevatedButton"/>

    <style name="Root.GiniPaymentTheme.Widget.Button.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/gps_dark_02</item>
        <item name="android:insetTop">@dimen/gps_zero</item>
        <item name="android:insetBottom">@dimen/gps_zero</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Button.IconButton" parent="Root.GiniPaymentTheme.Widget.Button.IconButton"/>

    <style name="Root.GiniPaymentTheme.Widget.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/gps_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:minHeight">@dimen/gps_large_56</item>
        <item name="strokeColor">@color/gps_dark_05</item>
        <item name="android:insetTop">@dimen/gps_zero</item>
        <item name="android:insetBottom">@dimen/gps_zero</item>
        <item name="iconPadding">@dimen/gps_large</item>
        <item name="materialThemeOverlay">@style/GiniPaymentTheme.ThemeOverlay.Button.OutlinedButton.Picker</item>
        <item name="android:textColor">@color/gps_outlined_button_text</item>
        <item name="android:textAppearance">@style/GiniPaymentTheme.Typography.Button.Picker</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Button.OutlinedButton" parent="Root.GiniPaymentTheme.Widget.Button.OutlinedButton"/>

    <style name="Root.GiniPaymentTheme.ThemeOverlay.Button.OutlinedButton.Picker" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/gps_outlined_button_background</item>
    </style>
    <style name="GiniPaymentTheme.ThemeOverlay.Button.OutlinedButton.Picker" parent="Root.GiniPaymentTheme.ThemeOverlay.Button.OutlinedButton.Picker" />

    <style name="Root.GiniPaymentTheme.ThemeOverlay.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorPrimary">@color/gps_dark_07</item>
        <item name="bottomSheetStyle">@style/GiniPaymentTheme.Widget.BottomSheet</item>
    </style>
    <style name="GiniPaymentTheme.ThemeOverlay.BottomSheetDialog" parent="Root.GiniPaymentTheme.ThemeOverlay.BottomSheetDialog" />

    <style name="Root.GiniPaymentTheme.Widget.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/gps_dark_07</item>
        <item name="shapeAppearance">@style/GiniPaymentTheme.Widget.BottomSheet.ShapeAppearance</item>
    </style>
    <style name="GiniPaymentTheme.Widget.BottomSheet" parent="Root.GiniPaymentTheme.Widget.BottomSheet" />

    <style name="Root.GiniPaymentTheme.Widget.BottomSheet.ShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/gps_medium_12</item>
    </style>
    <style name="GiniPaymentTheme.Widget.BottomSheet.ShapeAppearance" parent="Root.GiniPaymentTheme.Widget.BottomSheet.ShapeAppearance" />

    <style name="Root.GiniPaymentTheme.Widget.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@color/gps_dark_05</item>
    </style>
    <style name="GiniPaymentTheme.Widget.BottomSheet.DragHandle" parent="Root.GiniPaymentTheme.Widget.BottomSheet.DragHandle" />

    <style name="Root.GiniPaymentTheme.Widget.ShapeableImageView.Corners" parent="">
        <item name="cornerSize">@dimen/gps_small_2</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="GiniPaymentTheme.Widget.ShapeableImageView.Corners" parent="Root.GiniPaymentTheme.Widget.ShapeableImageView.Corners"/>

    <style name="Root.GiniPaymentTheme.Widget.RoundShapeableImageView.Corners" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="GiniPaymentTheme.Widget.RoundShapeableImageView.Corners" parent="Root.GiniPaymentTheme.Widget.RoundShapeableImageView.Corners"/>


    <style name="Root.GiniPaymentTheme.Widget.Button.TransparentBackground" parent="Root.GiniPaymentTheme.Widget.Button.UnelevatedButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/gps_bank_selector_button_color</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Button.TransparentBackground" parent="Root.GiniPaymentTheme.Widget.Button.TransparentBackground"/>

    <style name="Root.GiniPaymentTheme.Widget.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="android:backgroundTint">?attr/backgroundColor</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Snackbar" parent="Root.GiniPaymentTheme.Widget.Snackbar" />

    <style name="Root.GiniPaymentTheme.Widget.Snackbar.Button" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Snackbar.Button" parent="Root.GiniPaymentTheme.Widget.Snackbar.Button" />

    <style name="Root.GiniPaymentTheme.Widget.Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Snackbar.TextView" parent="Root.GiniPaymentTheme.Widget.Snackbar.TextView" />
    
    <!-- endregion -->

    <style name="Root.GiniPaymentTheme.PaymentInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorIconDrawable">@null</item>
        <item name="cornerRadius">@dimen/gps_small</item>
        <item name="hintTextAppearance">@style/GiniPaymentTheme.Typography.Caption2</item>
        <item name="android:textColorHint">@color/gps_payment_input_hint</item>
        <item name="boxStrokeWidth">@dimen/gps_zero</item>
        <item name="boxStrokeWidthFocused">@dimen/gps_zero</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomStart">@dimen/gps_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/gps_small</item>
        <item name="errorTextColor">@color/gps_feedback_01</item>
        <item name="errorTextAppearance">@style/GiniPaymentTheme.Typography.Caption2</item>
    </style>
    <style name="GiniPaymentTheme.PaymentInputLayout" parent="Root.GiniPaymentTheme.PaymentInputLayout"/>

    <style name="Root.GiniPaymentTheme.PaymentInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/gps_payment_input_edit_text_background</item>
        <item name="android:textAppearance">@style/GiniPaymentTheme.Typography.Body1</item>
        <item name="android:textColor">@color/gps_edit_text_color</item>
    </style>
    <style name="GiniPaymentTheme.PaymentInputEditTextStyle" parent="Root.GiniPaymentTheme.PaymentInputEditTextStyle"/>

    <style name="Root.GiniPaymentTheme.PageErrorText">
        <item name="android:textColor">@color/gps_dark_07</item>
    </style>
    <!-- Style for error text that is displayed when loading a page fails -->
    <style name="GiniPaymentTheme.PageErrorText" parent="Root.GiniPaymentTheme.PageErrorText" />

    <style name="Root.GiniPaymentTheme.PaymentDetailsCard">
        <item name="android:background">@drawable/gps_payment_details_background</item>
        <item name="android:elevation">@dimen/gps_medium_12</item>
    </style>

    <!-- Style for the Payment Details card in ReviewFragment-->
    <style name="GiniPaymentTheme.PaymentDetailsCard" parent="Root.GiniPaymentTheme.PaymentDetailsCard" />

    <style name="Root.GiniPaymentTheme.PaymentButtonProgressStyle">
        <item name="android:translationZ" tools:targetApi="lollipop">@dimen/gps_large_100</item>
    </style>

    <!-- Style for the progress indicator that is displayed on top of the Pay button in ReviewFragment -->
    <style name="GiniMerchant.PaymentButtonProgressStyle" parent="Root.GiniPaymentTheme.PaymentButtonProgressStyle" />

    <style name="Root.GiniPaymentTheme.CloseButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:minWidth">@dimen/gps_large_50</item>
        <item name="android:minHeight">@dimen/gps_large_50</item>
        <item name="android:background">@drawable/gps_close_button</item>
    </style>

    <!-- Style for close button in ReviewFragment -->
    <style name="GiniPaymentTheme.CloseButtonStyle" parent="Root.GiniPaymentTheme.CloseButtonStyle"/>

    <style name="Root.GiniPaymentTheme.PaymentDetails.InfoBar" parent="">
        <item name="android:background">@drawable/gps_payment_details_info_bar_background</item>
    </style>
    <style name="GiniPaymentTheme.PaymentDetails.InfoBar" parent="Root.GiniPaymentTheme.PaymentDetails.InfoBar" />

    <style name="Root.GiniPaymentTheme.PaymentDetails.InfoBar.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/GiniPaymentTheme.PaymentDetails.InfoBar.TextAppearance</item>
    </style>
    <style name="GiniPaymentTheme.PaymentDetails.InfoBar.TextView" parent="Root.GiniPaymentTheme.PaymentDetails.InfoBar.TextView" />

    <style name="Root.GiniPaymentTheme.PaymentDetails.InfoBar.TextAppearance" parent="GiniPaymentTheme.Typography.Caption1">
        <item name="android:textColor">@color/gps_dark_07</item>
    </style>
    <style name="GiniPaymentTheme.PaymentDetails.InfoBar.TextAppearance" parent="Root.GiniPaymentTheme.PaymentDetails.InfoBar.TextAppearance" />

    <style name="Root.GiniPaymentTheme.Widget.Button.PaymentProviderSelector" parent="GiniPaymentTheme.Widget.Button.TransparentBackground">
        <item name="android:textAppearance">@style/GiniPaymentTheme.Typography.Input</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Button.PaymentProviderSelector" parent="Root.GiniPaymentTheme.Widget.Button.PaymentProviderSelector"/>
    
    <style name="Root.GiniPaymentTheme.Widget.Button.PaymentProviderPicker" parent="GiniPaymentTheme.Widget.Button.TransparentBackground">
        <item name="android:textAppearance">@style/GiniPaymentTheme.Typography.Body1</item>
    </style>
    <style name="GiniPaymentTheme.Widget.Button.PaymentProviderPicker" parent="Root.GiniPaymentTheme.Widget.Button.PaymentProviderPicker"/>
</resources>