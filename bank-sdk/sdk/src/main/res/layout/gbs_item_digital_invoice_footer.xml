<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingStart="@dimen/gbs_digital_invoice_footer_horizontal_padding"
    android:paddingTop="@dimen/gbs_digital_invoice_footer_padding_top"
    android:paddingEnd="@dimen/gbs_digital_invoice_footer_horizontal_padding"
    android:paddingBottom="@dimen/gbs_digital_invoice_footer_padding_bottom">


    <TextView
        android:id="@+id/gross_price_total_integral_part"
        style="@style/GiniCaptureTheme.Typography.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gross_price_total_fractional_part"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="â‚¬242" />

    <TextView
        android:id="@+id/gross_price_total_fractional_part"
        style="@style/GiniCaptureTheme.Typography.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/gross_price_total_integral_part"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gross_price_total_integral_part"
        tools:text=".99" />


    <TextView
        android:id="@+id/total_label"
        style="@style/GiniCaptureTheme.Typography.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gbs_digital_invoice_footer_total_label_margin_left"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/gbs_digital_invoice_footer_total_label"
        app:layout_constraintBottom_toBottomOf="@id/gross_price_total_integral_part"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gross_price_total_integral_part" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/gbs_proceed"
        app:cornerRadius="@dimen/small"
        app:layout_constraintEnd_toEndOf="@+id/gross_price_total_integral_part"
        app:layout_constraintStart_toStartOf="@+id/total_label"
        app:layout_constraintTop_toBottomOf="@+id/gross_price_total_integral_part" />


</androidx.constraintlayout.widget.ConstraintLayout>
