<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="net.gini.android.bank.sdk.screenapiexample.MainActivity">

    <TextView
        android:id="@+id/configuration_options_header"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/configuration_options_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/button_start_scanner"
        app:layout_constraintBottom_toTopOf="@id/button_start_scanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configuration_options_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/enable_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bottom navigation bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:switchPadding="8dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/enable_custom_illustration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom onboarding illustration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/enable_bottom_bar"
                app:switchPadding="8dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/qr_code_scanning_enabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qr_code_scanning"
                android:checked="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enable_custom_illustration"
                app:switchPadding="8dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/only_qr_code_scanning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/only_qr_code_scanning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/qr_code_scanning_enabled"
                app:switchPadding="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_start_scanner"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gc_large_64"
        android:text="@string/start_gini_capture_sdk"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_gini_bank_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintEnd_toEndOf="@id/button_start_scanner"
        app:layout_constraintTop_toBottomOf="@id/button_start_scanner"
        tools:text="Gini Bank SDK v1.0.0-stub1" />

    <TextView
        android:id="@+id/text_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_start_scanner"
        android:layout_alignEnd="@+id/button_start_scanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="v1.0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
