<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorError"
    android:minHeight="@dimen/gc_large_64">

    <ImageButton
        android:id="@+id/gc_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gc_large"
        android:src="@drawable/gc_action_bar_back"
        android:padding="@dimen/gc_medium"
        app:tint="?attr/colorOnBackground"
        android:background="@android:color/transparent"
        android:contentDescription="@string/gc_back_button_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gc_camera_title"
        style="@style/GiniCaptureTheme.Typography.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gc_large"
        android:layout_marginEnd="@dimen/gc_large"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/gc_go_back"
        app:layout_constraintEnd_toStartOf="@+id/gc_help"
        app:layout_constraintStart_toEndOf="@+id/gc_go_back" />

    <ImageButton
        android:id="@+id/gc_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/gc_large"
        android:padding="@dimen/gc_medium"
        android:src="@drawable/gc_help_icon"
        android:background="@android:color/transparent"
        android:contentDescription="@string/gc_help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnBackground" />
</androidx.constraintlayout.widget.ConstraintLayout>