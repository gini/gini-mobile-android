<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    tools:background="#000">

    <net.gini.android.capture.view.InjectedViewContainer
        android:id="@+id/gc_injected_navigation_bar_container_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/gc_onboarding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gc_injected_navigation_bar_container_top"
        android:layout_above="@id/gc_injected_navigation_bar_container_bottom">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/gc_layout_page_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/gc_injected_navigation_bar_container_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/gc_onboarding_indicators_vertical_margin"
        android:orientation="horizontal">

        <!-- These views are created during runtime. Kept here only for visualization during development. -->
