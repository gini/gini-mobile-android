<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gc_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".analysis.AnalysisFragmentCompat">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="@color/Dark_01"
        android:alpha="@dimen/gc_analysis_preview_alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gc_analysis_overlay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/gc_analysis_preview_width_percentage">

        <ImageView
            android:id="@+id/gc_image_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/backgroundColor"
            android:scaleType="fitCenter"
            tools:src="@drawable/gc_no_camera" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/gc_analysis_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ProgressBar
            android:id="@+id/gc_progress_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateOnly="true"
            android:indeterminateTint="@color/Accent_01"
            android:indeterminateTintMode="src_in"
            android:padding="@dimen/large"
            android:visibility="gone"
            tools:targetApi="lollipop"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/gc_analysis_message"
            style="@style/GiniCaptureTheme.Typography.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/large"
            android:layout_marginEnd="@dimen/large"
            android:text="@string/gc_analysis_activity_indicator_message"
            android:visibility="gone"
            tools:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gc_analysis_hint_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/gc_analysis_hint_container_mini_height"
        android:paddingBottom="@dimen/large"
        android:paddingTop="@dimen/medium"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@drawable/gc_analysis_tips_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/gc_analysis_hint_container_bottom_margin"
        android:layout_marginEnd="@dimen/gc_analysis_hint_container_horizontal_margin"
        android:layout_marginLeft="@dimen/gc_analysis_hint_container_horizontal_margin"
        android:layout_marginRight="@dimen/gc_analysis_hint_container_horizontal_margin"
        android:layout_marginStart="@dimen/gc_analysis_hint_container_horizontal_margin">

        <ImageView
            android:id="@+id/gc_analysis_hint_image"
            android:layout_width="@dimen/gc_analysis_hint_icon_size"
            android:layout_height="@dimen/gc_analysis_hint_icon_size"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/gc_analysis_hint_icon_margin"
            tools:src="@drawable/gc_analysis_tips_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/gc_analysis_hint_headline_horizontal_margin"
            android:layout_marginStart="@dimen/gc_analysis_hint_container_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gc_analysis_hint_headline"
                style="@style/GiniCaptureTheme.Typography.Subtitle1"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toTopOf="@id/gc_analysis_hint_container"
                android:layout_height="wrap_content"
                tools:text="Tipp:" />

            <TextView
                android:id="@+id/gc_analysis_hint_text"
                style="@style/GiniCaptureTheme.Typography.Body2"
                android:textColor="@color/Dark_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Gute LichtverhÃ¤ltnisse beim Aufnehmen des Fotos beschleunigen die Analyse." />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
