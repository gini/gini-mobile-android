<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gc_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:adjustViewBounds="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#56769c"
        tools:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/gc_badge"
        style="@style/GiniCaptureTheme.Typography.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gc_image_stack_badge_background"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/gc_thumbnail"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/gc_thumbnail"
        app:layout_constraintStart_toEndOf="@id/gc_thumbnail"
        app:layout_constraintTop_toTopOf="@id/gc_thumbnail"
        android:visibility="invisible"
        tools:text="3"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>