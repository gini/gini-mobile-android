<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gc_noresults_background"
    android:orientation="vertical">

    <net.gini.android.capture.internal.ui.CustomFontTextView
        android:id="@+id/gc_no_results_header"
        style="@style/GiniCaptureTheme.NoResults.Header.TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawablePadding="@dimen/gc_noresults_header_drawable_padding"
        android:drawableStart="@drawable/gc_alert_icon"
        android:gravity="center_vertical"
        android:padding="@dimen/gc_noresults_header_padding"
        android:text="@string/gc_noresults_header" />

    <View
        android:id="@+id/gc_no_results_header_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/gc_no_results_header"
        android:background="#eee" />

    <net.gini.android.capture.internal.ui.CustomFontTextView
        android:id="@+id/gc_no_results_headline"
        style="@style/GiniCaptureTheme.NoResults.Headline.TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gc_no_results_header_separator"
        android:padding="16dp"
        android:text="@string/gc_noresults_headline" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/gc_no_results_headline"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/gc_noresults_tip_icon_size"
                    android:layout_height="@dimen/gc_noresults_tip_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/gc_noresults_tip_icon_margin"
                    android:src="@drawable/gc_photo_tip_lighting" />

                <net.gini.android.capture.internal.ui.CustomFontTextView
                    style="@style/GiniCaptureTheme.NoResults.Tip.TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/gc_noresults_tip_text_bottom_margin"
                    android:layout_marginEnd="@dimen/gc_noresults_tip_text_right_margin"
                    android:layout_marginStart="@dimen/gc_noresults_tip_text_left_margin"
                    android:layout_marginTop="@dimen/gc_noresults_tip_text_top_margin"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/gc_noresults_tip_text_max_width"
                    android:text="@string/gc_photo_tip_lighting" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/gc_noresults_tip_icon_size"
                    android:layout_height="@dimen/gc_noresults_tip_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/gc_noresults_tip_icon_margin"
                    android:src="@drawable/gc_photo_tip_flat" />

                <net.gini.android.capture.internal.ui.CustomFontTextView
                    style="@style/GiniCaptureTheme.NoResults.Tip.TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/gc_noresults_tip_text_bottom_margin"
                    android:layout_marginEnd="@dimen/gc_noresults_tip_text_right_margin"
                    android:layout_marginStart="@dimen/gc_noresults_tip_text_left_margin"
                    android:layout_marginTop="@dimen/gc_noresults_tip_text_top_margin"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/gc_noresults_tip_text_max_width"
                    android:text="@string/gc_photo_tip_flat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/gc_noresults_tip_icon_size"
                    android:layout_height="@dimen/gc_noresults_tip_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/gc_noresults_tip_icon_margin"
                    android:src="@drawable/gc_photo_tip_parallel" />

                <net.gini.android.capture.internal.ui.CustomFontTextView
                    style="@style/GiniCaptureTheme.NoResults.Tip.TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/gc_noresults_tip_text_bottom_margin"
                    android:layout_marginEnd="@dimen/gc_noresults_tip_text_right_margin"
                    android:layout_marginStart="@dimen/gc_noresults_tip_text_left_margin"
                    android:layout_marginTop="@dimen/gc_noresults_tip_text_top_margin"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/gc_noresults_tip_text_max_width"
                    android:text="@string/gc_photo_tip_parallel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/gc_noresults_tip_icon_size"
                    android:layout_height="@dimen/gc_noresults_tip_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/gc_noresults_tip_icon_margin"
                    android:src="@drawable/gc_photo_tip_align" />

                <net.gini.android.capture.internal.ui.CustomFontTextView
                    style="@style/GiniCaptureTheme.NoResults.Tip.TextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/gc_noresults_tip_text_bottom_margin"
                    android:layout_marginEnd="@dimen/gc_noresults_tip_text_right_margin"
                    android:layout_marginStart="@dimen/gc_noresults_tip_text_left_margin"
                    android:layout_marginTop="@dimen/gc_noresults_tip_text_top_margin"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/gc_noresults_tip_text_max_width"
                    android:text="@string/gc_photo_tip_align" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/gc_noresults_space_height_for_bottom_button" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/gc_button_no_results_back"
        style="@style/GiniCaptureTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/gc_noresults_bottom_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/gc_noresults_bottom_button_margin"
        android:text="@string/gc_noresults_back_button"
        android:width="@dimen/gc_noresults_bottom_button_max_width" />


</RelativeLayout>