<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GiniCaptureTheme" parent="Root.GiniCaptureTheme">
        <item name="colorPrimary">@color/Accent_01</item>
        <item name="colorPrimaryDark">@color/Accent_03</item>
        <item name="colorOnPrimary">@color/Light_01</item>
        <item name="colorSurface">@color/Dark_02</item>
        <item name="backgroundColor">@color/Dark_01</item>
        <item name="colorOnBackground">@color/Light_01</item>
        <item name="dividerColor">@color/Dark_03</item>
        <item name="colorOnSurface">@color/Light_04</item>
    </style>

    <style name="GiniCaptureTheme.Analysis" parent="GiniCaptureTheme">
        <item name="dividerColor">@color/Dark_02</item>
    </style>

    <style name="Root.GiniCaptureTheme.Analysis.AnalysingMessage.TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Light_01</item>
        <item name="gcCustomFont" />
    </style>

    <style name="Root.GiniCaptureTheme.Analysis.HintHeadline.TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gc_analysis_hint_headline_night</item>
        <item name="gcCustomFont" />
    </style>

    <style name="Root.GiniCaptureTheme.Analysis.Hint.TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="android:textColor">@color/gc_analysis_hint_night</item>
        <item name="gcCustomFont" />
    </style>

</resources>
