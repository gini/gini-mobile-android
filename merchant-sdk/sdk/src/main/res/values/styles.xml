<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- region Theme -->

    <!-- Override this to change the theme for the Merchant SDK -->
    <style name="Root.GiniMerchantTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/gms_accent_01</item>
        <item name="colorPrimaryDark">@color/gms_light_02</item>
        <item name="colorOnPrimary">@color/gms_light_01</item>
        <item name="backgroundColor">@color/gms_light_01</item>
        <item name="colorOnBackground">@color/gms_dark_01</item>
        <item name="dividerColor">@color/gms_light_02</item>
        <item name="colorSurface">@color/gms_dark_07</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="colorSurfaceInverse">@color/gms_dark_01</item>
        <item name="colorOnSurfaceInverse">@color/gms_light_02</item>
        <item name="colorSurfaceVariant">@color/gms_light_01</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="alertDialogTheme">@style/GiniMerchantTheme.ThemeOverlay.Dialog.Alert</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="textAppearanceHeadline1">@style/GiniPaymentTheme.Typography.Headline1</item>
        <item name="textAppearanceHeadline2">@style/GiniPaymentTheme.Typography.Headline2</item>
        <item name="textAppearanceHeadline3">@style/GiniPaymentTheme.Typography.Headline3</item>
        <item name="textAppearanceBody1">@style/GiniPaymentTheme.Typography.Body1</item>
        <item name="textAppearanceBody2">@style/GiniPaymentTheme.Typography.Body2</item>
        <item name="textAppearanceSubtitle1">@style/GiniPaymentTheme.Typography.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/GiniPaymentTheme.Typography.Subtitle2</item>
        <item name="textAppearanceButton">@style/GiniPaymentTheme.Typography.Button</item>
        <item name="textAppearanceCaption">@style/GiniPaymentTheme.Typography.Caption1</item>
        <item name="textAppearanceOverline">@style/GiniPaymentTheme.Typography.Caption2</item>
        <item name="textAppearanceDisplaySmall">?attr/textAppearanceHeadline1</item>
        <item name="textAppearanceHeadlineLarge">?attr/textAppearanceHeadline2</item>
        <item name="textAppearanceHeadlineMedium">?attr/textAppearanceHeadline3</item>
        <item name="textAppearanceHeadlineSmall">?attr/textAppearanceHeadline4</item>
        <item name="textAppearanceTitleLarge">?attr/textAppearanceHeadline5</item>
